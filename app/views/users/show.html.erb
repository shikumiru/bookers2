<div class="conteiner">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <% if @user.image.attached? %>
        <%= image_tag @user.image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th></th>
  </tr>
</table>
<%= link_to "Edit", edit_user_path(current_user.id) %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>
